{
  "extends": "typescript-config-permissive",
  "include": ["src"],
  "compilerOptions": {
    "strict": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "react-testing-library": ["./utils/react-testing-library"],
      "logger": ["./utils/logger"]
    }
  },
  "exclude": ["node_modules"]
}
